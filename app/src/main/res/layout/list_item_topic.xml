<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="12dp"
              android:paddingRight="12dp">

    <RelativeLayout
        android:id="@+id/topic_item_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimens_10dp"
        android:paddingTop="@dimen/dimens_10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/topic_item_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/avatar_default"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingStart="@dimen/dimens_15dp"
            android:layout_toEndOf="@+id/topic_item_avatar"
            android:layout_toRightOf="@+id/topic_item_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic_item_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                tools:text="mogodb"/>

            <TextView
                android:id="@+id/topic_item_posttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_tiny"
                tools:text="发布于3天前"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/topic_item_excellent"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_awesome"
                android:gravity="center"
                android:text="@string/label_recommend"
                android:textColor="#8bd498"
                android:textSize="@dimen/text_size_tiny"/>

            <TextView
                android:id="@+id/topic_item_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size_mini"
                tools:text="Ruby"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/topic_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="@dimen/text_size_medium_large"
        tools:text="Ruby是世界上最好的语言"/>

</LinearLayout>
